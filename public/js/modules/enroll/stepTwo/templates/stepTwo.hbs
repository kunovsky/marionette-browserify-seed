<div class="page-header">
  <h1>{{cms "contact_heading"}}</h1>
</div>

<form class="form-horizontal well" role="form">
  {{#if errors}}
    <div class="alert alert-warning">
      <ul>
        {{#each errors}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
  {{/if}}

  <div class="form-group">
    <label class="col-sm-1 control-label" for="name">{{cms "contact_email"}}</label>
    <div class="col-sm-11">
      <input class="form-control" name="email" type="text" placeholder="blue@red.com">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-1 control-label" for="phone">{{cms "contact_phone"}}</label>
    <div class="col-sm-11">
      <input class="form-control" name="phone" type="text" maxlength="10" placeholder="5555555555">
    </div>
  </div>

  <div class="form-group">
     <div class="col-sm-offset-1 col-sm-11">
       <button type="submit" class="btn btn-default">{{cms "next"}}</button>
     </div>
   </div>
</form>
