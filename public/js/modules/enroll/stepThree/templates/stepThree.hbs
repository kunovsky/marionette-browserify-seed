<div class="page-header">
  <h1>{{cms "sign_heading"}}</h1>
</div>

<form class="form-horizontal well" role="form">
  {{#if errors}}
    <div class="alert alert-warning">
      <ul>
        {{#each errors}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    </div>
  {{/if}}

  <div class="form-group">
    <label class="col-sm-1 control-label" for="nameConfirm">{{cms "sign_name"}}</label>
    <div class="col-sm-11">
      <input class="form-control" name="nameConfirm" type="text" placeholder="{{name}}">
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-1 control-label" for="signature">{{cms "sign_agree"}}</label>
    <div class="col-sm-11">
      <input class="form-control" name="signature" type="text" placeholder="I agree">
    </div>
  </div>

  <div class="form-group">
     <div class="col-sm-offset-1 col-sm-11">
       <button type="submit" class="btn btn-default">{{cms "finish"}}</button>
     </div>
   </div>
</form>
